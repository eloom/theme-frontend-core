<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="page.main.title">
			<action method="setPageTitle">
				<argument translate="true" name="title" xsi:type="string">Brands</argument>
			</action>
		</referenceBlock>
		<referenceContainer name="content">
			<block class="Eloom\ThemeFrontend\Block\Brand\ListBrand"
			       ifconfig="eloom_themefrontend/brand/active"
			       name="eloomtheme_brand_list"
			       template="brand/list.phtml"/>

			<block class="Magento\Framework\View\Element\Template"
			       ifconfig="eloom_themefrontend/brand/active"
			       name="brand_filter_by_character"
			       template="Eloom_ThemeFrontend::brand/filter/character.phtml"/>
		</referenceContainer>
	</body>
</page>

